<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_run_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_run_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Button
                android:id="@+id/btn_run1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run1" />

            <Button
                android:id="@+id/btn_run2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run2" />
            <Button
                android:id="@+id/btn_run3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run3" />
            <Button
                android:id="@+id/btn_run4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_run_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Button
                android:id="@+id/btn_run5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run5" />

            <Button
                android:id="@+id/btn_run6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run6" />

            <Button
                android:id="@+id/btn_run7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run7" />

            <Button
                android:id="@+id/btn_run8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run8" />
        </LinearLayout>

    </LinearLayout>







    <Button
        android:id="@+id/btn_run_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Coroutine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>